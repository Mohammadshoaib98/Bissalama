<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.ActivityAddJourney">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_agency_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#81ecec"
            android:textSize="32sp"
            android:textStyle="bold|italic" />

        <Spinner
            android:id="@+id/spinner_city_src"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:entries="@array/cities_name"
            android:textAlignment="center"
            tools:ignore="TouchTargetSizeCheck" />

        <Spinner
            android:id="@+id/spinner_city_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:entries="@array/cities_name"
            tools:ignore="TouchTargetSizeCheck" />


        <ImageButton
            android:id="@+id/btn_time"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_button"
            android:src="@drawable/ic_time"
            android:textSize="20sp"
            app:backgroundTint="#03DAC5"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColorHint="#0091EA"
            android:textSize="28sp"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/btn_date"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/custom_button"
            android:src="@drawable/ic_date"
            android:textSize="20sp"
            app:backgroundTint="#03DAC5"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_add_journey"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:text="Add journey"
            android:background="@drawable/custom_button"
            app:backgroundTint="#03DAC5" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>